<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
    android:title="@string/pref_general" >
        <EditTextPreference
            android:key="pref_name"
            android:title="@string/pref_name"
            android:summary="@string/pref_name_summary"
            android:defaultValue="Mobile User"/>
        <CheckBoxPreference
            android:key="pref_clipboard"
            android:title="@string/pref_clipboard"
            android:summary="@string/pref_clipboard_summary"
            android:defaultValue="true"/>
    </PreferenceCategory>

    <PreferenceCategory
    android:title="@string/pref_about" >    
        <Preference
            android:key="version_name"
            android:title="@string/pref_version"
            android:summary="@string/version_name"/>
    </PreferenceCategory>

</PreferenceScreen>