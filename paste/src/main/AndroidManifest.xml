<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.teamblueridge.paste" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.teamblueridge.paste.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.teamblueridge.paste.SettingsActivity"
            android:label="@string/action_settings"/>
        <activity android:name="org.teamblueridge.paste.CreatePasteActivity"
            android:label="@string/title_section1" />
    </application>

</manifest>
